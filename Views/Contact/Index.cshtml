}

<h1>Contact Relator</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Property" asp-action="Index" method="GET">
            <div class="form-group">
                <label class="control-label">Relator Email</label>
                <input class="form-control" required />
            </div>
