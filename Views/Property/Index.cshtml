@model IEnumerable<RealtorApp.Models.Property>

@{
    ViewData["Title"] = "Properties";
}

<h1>Properties</h1>

<p>
    <a asp-controller="Login" asp-action="Login">Create New</a>
</p>
<form asp-controller="Property" asp-action="Index">
    <p>
        <select name="DropDownVal">
                <option value="Price">Price</option>
                <option value="Address">Address</option>
                <option value="City">City</option>
                <option value="Zip">Zip</option>
                <option value="YearBuilt">Year Built</option>
                <option value="PropertyType">Property Type</option>
                <option value="SquareFeet">Square Feet</option>
                <option value="Bedrooms">Bedrooms</option>
                <option value="Bathrooms">Bathrooms</option>
                <option value="GarageCapacity">Garage Capacity</option> 
        </select> : 
        <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearBuilt)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.PropertyType)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.SquareFeet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bedrooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bathrooms)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.GarageCapacity)
            </th> *@
            @* <th>
                @Html.DisplayNameFor(model => model.RelatorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelatorPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelatorEmail)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearBuilt)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.PropertyType)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.SquareFeet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bedrooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bathrooms)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.GarageCapacity)
            </td> *@
            @* <td>
                @Html.DisplayFor(modelItem => item.RelatorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelatorPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelatorEmail)
            </td> *@
            <td>
                <a asp-controller="Login" asp-action="LoginEdit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Login" asp-action="LoginDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
